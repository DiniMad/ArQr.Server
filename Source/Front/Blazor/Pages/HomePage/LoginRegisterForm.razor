@using BlazorState

@inherits BlazorStateComponent

<EditForm Model="_loginRegisterModel" OnSubmit="Callback">
    <Row Justify="center">
        <Col Span="24">
            <Input Class="text-input" Type="number" Placeholder="شماره تلفن (بدون صفر)" Size="@InputSize.Large" @bind-Value="@_loginRegisterModel.PhoneNumber">
                <Prefix>
                    <Icon Type="phone"/>
                </Prefix>
            </Input>
        </Col>
    </Row>
    <Row Justify="center">
        <Col Span="24">
            <InputPassword Class="text-input" Placeholder="رمز عبور" Size="@InputSize.Large" @bind-Value="@_loginRegisterModel.Password">
                <Prefix>
                    <Icon Type="lock"/>
                </Prefix>
            </InputPassword>
        </Col>
    </Row>
    <Row Justify="center">
        <Col>
            <RadioGroup @bind-Value="_loginRegisterType" ButtonStyle="solid">
                <Radio RadioButton Value="@(LoginRegisterType.Register)">ساخت حساب کاربری</Radio>
                <Radio RadioButton Value="@(LoginRegisterType.Login)">ورود به حساب کاربری</Radio>
            </RadioGroup>
        </Col>
    </Row>
    <Row Justify="center">
        <Col>
            <Button Type="primary" HtmlType="submit" Id="submit-button">@SubmitText</Button>
        </Col>
    </Row>
</EditForm>